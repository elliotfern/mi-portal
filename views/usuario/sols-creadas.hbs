<div class="container">

  <h1>Mis solicitudes creadas en curso</h1>

  <div class="row g-3">
    {{#each this.solUsuarioCreador}}
    <div class="col">
      <div class="card" style="width: 18rem;">
        <a href="/solicitud/{{this._id}}/detalles"><img src="{{this.imagenSolicitud}}" alt="{{this.titulo}}"
            width="100%" /></a>
        <div class="card-body">
          <h5 class="card-title">Título: {{this.titulo}}</h5>
          <p><strong>Descripción: </strong>{{this.descripcion}}</p>
          <p><strong>Prestante: </strong><a
              href="/usuario/{{this.usuarioPrestante._id}}/detalles">{{this.usuarioPrestante.nombreCompleto}}</a></p>
          <p><strong>Solicitante:</strong> {{this.usuarioCreador.nombreCompleto}}</p>
          <p><a href="/solicitud/{{this._id}}/detalles">Ver más</a></p>

          <form action="/solicitud/{{this._id}}/catalogo/completada" method="post">
            <button class="btn btn-outline-success">¡Solicitud completada!</button>
          </form>

          <form action="/usuario/perfil/mis-solicitudes-prestadas/conversacion" method="post">
            <button class="btn btn-outline-primary">¡Envia un mensaje a
              {{this.usuarioPrestante.nombreCompleto}}!</button>
            <input type="hidden" name="idSolicitud" value="{{this._id}}">
            <input type="hidden" name="idUsuarioCreador" value="{{this.usuarioCreador._id}}">
            <input type="hidden" name="idUsuarioPrestante" value="{{this.usuarioPrestante._id}}">
          </form>

          <form action="/usuario/perfil/mis-solicitudes-prestadas/mensajes" method="post">
            <button class="btn btn-outline-secondary">Ver conversación</button>
            <input type="hidden" name="idSolicitud" value="{{this._id}}">
          </form>


        </div>
      </div>
    </div>
    {{/each}}

  </div>


  <hr>
  <div class="col-md derecha">
    <a href="/usuario/perfil" class="btn btn-outline-secondary" tabindex="-1" role="button" aria-disabled="true">Volver
      a mi perfil</a>
  </div>

</div>