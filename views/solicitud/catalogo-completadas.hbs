<div>

  <h1>Catálogo de solicitudes completadas</h1>

  {{#each this.solicitudesCompletadas}}
    <div>
      <h3>Título: {{this.titulo}}</h3>
      <p>Solicitante: <a href="/usuario/{{this.usuarioCreador._id}}/detalles">{{this.usuarioCreador.nombreCompleto}}</p></a> 
      <p>Prestante: <a href="/usuario/{{this.usuarioPrestante._id}}/detalles">{{this.usuarioPrestante.nombreCompleto}}</p></a> 
      <p>Descripción: {{this.descripcion}}</p>
      <img src="{{this.imagenSolicitud}}" alt="" width="200px" />
      <p><a href="/solicitud/{{this._id}}/detalles">Ver más</a></p>

         {{#if ../isUserAdmin }}
<form action="/usuario/perfil/mis-solicitudes-prestadas" method="post">
        <button>Eliminar solicitud</button>
        <input type="hidden" name="_id" value="{{this._id}}">
      </form>
      {{/if}}
      
<hr>
    </div>
  {{/each}}

</div>